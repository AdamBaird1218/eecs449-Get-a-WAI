#!/bin/bash

usage() {
  echo "Usage: $0 (create|destroy|reset)"
}
if [ $# -ne 1 ]; then
  usage
  exit 1
fi


case $1 in
  "create")
    
    if [ -f "var/cites.sqlite3" ]; then
        echo "DB exists."
        exit 1
    else
        mkdir -p var/
        sqlite3 var/cities.sqlite3 < cities_server/cities/sql/cities.sql
    fi
    ;;
  "destroy")
    rm -f var/cities.sqlite3
    ;;
  "reset")
    rm -f var/cities.sqlite3
    mkdir -p var/
    sqlite3 var/cities.sqlite3 < cities_server/cities/sql/cities.sql
    ;;
  *)
    usage
    exit 1
    ;;
esac